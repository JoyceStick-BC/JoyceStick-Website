<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}{% endblock %}JoyceStick</title>
		<link rel="stylesheet" type="text/css" href="{{ base_url() }}/css/style.css">
		<link href="https://fonts.googleapis.com/css?family=Montserrat:300,400" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
		<script src="https://use.typekit.net/wsq0lxr.js"></script>
		<script>try{Typekit.load({ async: true });}catch(e){}</script>
		{% block head %}{% endblock %}
		<link rel="icon" type="image/png" href="{{ base_url() }}/images/drop.png" />
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>
	<style>
		{% block style %}{% endblock %}
	</style>
	<body {% block bodyTag %}{% endblock %}>
		{% include 'templates/partials/navigation.twig' %}
		{% include 'templates/partials/flash.twig' %}
		{% block content %}{% endblock %}
		<div class="clear"></div>
		{% include 'templates/partials/footer.twig' %}
		{% block script %}{% endblock %}
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-85168570-1', 'auto');
			ga('send', 'pageview');
		</script>
		<script>
			$(document).ready(function(){
				$("#leftGlasses").css("height", $("#imgfooter").height());
				$("#rightGlasses").css("height", $("#imgfooter").height());

				console.log(-$("#imgfooter").height()/2);
				console.log($("#imgfooter").height());
				$("#footerImage").css("margin-top", -$("#imgfooter").height()/2);
			});
			
			$( window ).resize(function() {
				$("#leftGlasses").css("height", $("#imgfooter").height());
				$("#rightGlasses").css("height", $("#imgfooter").height());
				console.log($("#imgfooter").height());
				$("#footerImage").css("margin-top", -$("#imgfooter").height()/2);
			});
		</script>
	</body>
</html>